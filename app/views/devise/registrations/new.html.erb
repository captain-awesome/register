<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :user_type, "Register as Client or Stylist" %><br />

    <%= f.label :user_type, "Client", :value => "0"  %>
    <%= f.radio_button :user_type, 0 %>

    <%= f.label :user_type, "Stylist", :value => "1" %>
    <%= f.radio_button :user_type, 1 %>
  </div>

    <hr>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %>
  </div>

  <hr>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <hr>

  <div class="field">
    <%= f.label :cc_number , "Credit Card Number"%><br />
    <%= f.text_field :cc_number %>
  </div>

  <div class="field">
    <%= f.label :cc_expiration_month, "Credit Card Exp Month" %><br />
    <%= f.text_field :cc_expiration_month %>
  </div>

  <div class="field">
    <%= f.label :cc_expiration_year, "Credit Card Exp Year" %><br />
    <%= f.text_field :cc_expiration_year %>
  </div>

  <hr>

  <div class="field">
    <%= f.label :pets %>
    <%= f.check_box :pets %>
  </div>

  <div class="field">
    <%= f.label :smoker, "Indoor smoker" %>
    <%= f.check_box :smoker %>
  </div>

  <div class="field">
    <%= f.label :parking %>
    <%= f.check_box :parking %>
  </div>

  <div class="field">
    <%= f.label :outlet, "Electical outlets" %>
    <%= f.check_box :outlet %>
  </div>

  <div class="field">
    <%= f.label :seating %>
    <%= f.check_box :seating %>
  </div>

  <div class="field">
    <%= f.label :rug %>
    <%= f.check_box :rug %>
  </div>

  <div class="field">
    <%= f.label :water %>
    <%= f.check_box :water %>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
